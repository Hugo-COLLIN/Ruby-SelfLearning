<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
      <% if post.user == current_user %>
        <%= link_to "Edit", edit_post_path(post) %>
        <%= link_to "Delete", post, method: :delete, data: { confirm: 'Sure ???' } %>
      <%end%>
    </p>
    <hr>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
